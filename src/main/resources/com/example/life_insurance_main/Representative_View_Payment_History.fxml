<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ViewPaymentHistoryController">
    <children>
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Customer Payment History" />

        <Label layoutX="50" layoutY="70" text="Customer ID:" />
        <TextField fx:id="customerIdField" layoutX="180" layoutY="65" prefWidth="250" />
        <Button layoutX="440" layoutY="65" onAction="#handleSearchPayments" text="Search" />

        <TableView fx:id="paymentTable" layoutX="213.0" layoutY="122.0" prefHeight="200" prefWidth="244.0">
            <columns>
                <TableColumn text="Date" />
                <TableColumn text="Amount" />
                <TableColumn text="Method" />
            </columns>
        </TableView>

        <Button layoutX="300" layoutY="340" onAction="#handleDownload" text="Download" />
    </children>
</AnchorPane>
