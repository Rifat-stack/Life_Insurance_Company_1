<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.project.ApproveRenewalController">

    <children>
        <Label layoutX="180" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Approve Renewal" />

        <Label layoutX="50" layoutY="70" text="Request ID:" />
        <TextField fx:id="requestIdField" layoutX="200" layoutY="65" prefWidth="250" />

        <Label layoutX="50" layoutY="120" text="Decision:" />
        <ComboBox fx:id="decisionBox" layoutX="200" layoutY="115" prefWidth="250" />

        <Button layoutX="200" layoutY="170" onAction="#handleSubmit" text="Submit Decision" />
        <Label fx:id="resultLabel" layoutX="200" layoutY="220" textFill="green" />
        <Button layoutX="14.0" layoutY="257.0" onAction="#backButton" text="Back" />
        <Button layoutX="89.0" layoutY="257.0" onAction="#MainButton" text="Main" />
    </children>
</AnchorPane>
