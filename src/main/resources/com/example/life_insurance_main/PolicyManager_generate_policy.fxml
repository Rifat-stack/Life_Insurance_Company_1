<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.GeneratePolicyReportController">

    <children>
        <Label layoutX="230" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Generate Policy Report" />

        <Label layoutX="50" layoutY="70" text="Report Type:" />
        <ComboBox fx:id="reportTypeBox" layoutX="200" layoutY="65" prefWidth="250" />

        <Button layoutX="293.0" layoutY="106.0" onAction="#handleGenerate" text="Generate" />
        <Button layoutX="573.0" layoutY="310.0" onAction="#handleDownload" text="Download" />

        <Label fx:id="summaryLabel" layoutX="200" layoutY="160" textFill="green" />

        <TableView fx:id="reportTable" layoutX="44.0" layoutY="143.0" prefHeight="160.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="policyIdColumn" prefWidth="100.0" text="Policy ID" />
                <TableColumn fx:id="customerNameColumn" prefWidth="150.0" text="Customer Name" />
                <TableColumn fx:id="premiumColumn" prefWidth="100.0" text="Premium" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="startDateColumn" prefWidth="150.0" text="Start Date" />
            </columns>
        </TableView>

        <Button layoutX="14.0" layoutY="357.0" mnemonicParsing="false" onAction="#Backbutton" text="Back" />
        <Button layoutX="65.0" layoutY="357.0" mnemonicParsing="false" onAction="#MainButton" text="Main Menu" />
    </children>
</AnchorPane>
