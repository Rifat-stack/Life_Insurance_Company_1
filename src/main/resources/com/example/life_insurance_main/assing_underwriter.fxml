<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.AssignUnderwriterController"
            prefWidth="600" prefHeight="320">

    <children>
        <Label layoutX="160" layoutY="20" text="Assign Underwriter"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="50" layoutY="70" text="Application ID:" />
        <TextField fx:id="applicationIdField" layoutX="200" layoutY="65" prefWidth="250"/>

        <Label layoutX="50" layoutY="120" text="Underwriter:" />
        <ComboBox fx:id="underwriterBox" layoutX="200" layoutY="115" prefWidth="250"/>

        <Button text="Assign" layoutX="200" layoutY="170" onAction="#handleAssign"/>
        <Label fx:id="resultLabel" layoutX="200" layoutY="220" textFill="blue"/>
        <Button layoutX="27.0" layoutY="348.0" onAction="#backButton" text="Back" />
        <Button layoutX="103.0" layoutY="348.0" onAction="#MainButton" text="Main" />
    </children>
</AnchorPane>
