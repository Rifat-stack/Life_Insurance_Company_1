                <TableColumn fx:id="IDTable" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="FeedBackTypeTable" prefWidth="100.00003051757812" text="FeedBack Type" />
                <TableColumn fx:id="FeedBackTable" prefWidth="268.00002034505206" text="FeedBack " />
