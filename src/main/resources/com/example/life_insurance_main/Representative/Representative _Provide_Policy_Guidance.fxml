<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="509.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance_main.Representative.PolicyGuidanceController">
    <children>
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Provide Policy Guidance" />

        <Label layoutX="40" layoutY="70" text="Customer ID or Name:" />
        <TextField fx:id="customerIdField" layoutX="200" layoutY="65" prefWidth="350" />

        <Label layoutX="40" layoutY="110" text="Customer Needs:" />
        <TextField fx:id="needsField" layoutX="200" layoutY="105" prefWidth="350" />

        <Button layoutX="200" layoutY="145" onAction="#handleSearch" text="Search Policies" />

        <Label layoutX="40" layoutY="185" text="Current Policy:" />
        <Label fx:id="policyLabel" layoutX="200" layoutY="185" prefWidth="350" />

        <TableView fx:id="recommendationTable" layoutX="40.0" layoutY="255.0" prefHeight="160.0" prefWidth="570.0">
            <columns>
                <TableColumn fx:id="policyNameColumn" prefWidth="200.0" text="Policy Name" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                <TableColumn fx:id="featuresColumn" prefWidth="270.0" text="Features" />
            </columns>
        </TableView>
      <Label layoutX="200.0" layoutY="220.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Recommended Policies" />
      <Button layoutX="23.0" layoutY="462.0" onAction="#handleBack" prefHeight="25.0" prefWidth="50.0" text="Back" />
      <Button layoutX="78.0" layoutY="462.0" onAction="#handleMain" prefHeight="25.0" prefWidth="50.0" text="main" />
    </children>
</AnchorPane>
