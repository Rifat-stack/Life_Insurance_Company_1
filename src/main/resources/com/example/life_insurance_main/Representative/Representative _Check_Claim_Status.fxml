<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance_main.Representative.CheckClaimStatusController">
    <children>
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Check Claim Status" />

        <Label layoutX="50" layoutY="70" text="Claim ID:" />
        <TextField fx:id="claimIdField" layoutX="180" layoutY="65" prefWidth="250" />

        <Button layoutX="450" layoutY="65" onAction="#handleCheckStatus" text="Check Status" />

        <Label layoutX="50" layoutY="130" text="Status:" />
        <Label fx:id="statusLabel" layoutX="180" layoutY="130" />

        <Label layoutX="50" layoutY="170" text="Remarks:" />
        <Label fx:id="remarksLabel" layoutX="180" layoutY="170" />
    </children>
</AnchorPane>
