<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane  prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.SubmitSupportTicketController">
    <children>
        <Label layoutX="160" layoutY="20" text="Submit Support Ticket" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="50" layoutY="70" text="Customer ID:" />
        <TextField fx:id="customerIdField" layoutX="180" layoutY="65" prefWidth="300"/>

        <Label layoutX="50" layoutY="120" text="Issue Type:" />
        <ComboBox fx:id="issueTypeBox" layoutX="180" layoutY="115" prefWidth="300"/>

        <Label layoutX="50" layoutY="170" text="Complaint Description:" />
        <TextArea fx:id="descriptionArea" layoutX="180" layoutY="165" prefWidth="300" prefHeight="100"/>

        <Button text="Submit Ticket" layoutX="180" layoutY="280" onAction="#handleSubmitTicket"/>

        <Label fx:id="ticketResultLabel" layoutX="180" layoutY="330" textFill="blue"/>
    </children>
</AnchorPane>
