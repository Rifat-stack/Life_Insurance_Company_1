<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.PolicyGuidanceController">
    <children>
        <Label layoutX="180" layoutY="20" text="Provide Policy Guidance" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="40" layoutY="70" text="Customer ID or Name:" />
        <TextField fx:id="customerIdField" layoutX="200" layoutY="65" prefWidth="350"/>

        <Label layoutX="40" layoutY="120" text="Current Policy:" />
        <Label fx:id="policyLabel" layoutX="200" layoutY="120" prefWidth="350"/>

        <Label layoutX="40" layoutY="170" text="Customer Needs:" />
        <TextField fx:id="needsField" layoutX="200" layoutY="165" prefWidth="350"/>

        <Button text="Search Policies" layoutX="200" layoutY="215" onAction="#handleSearch"/>

        <Label layoutX="40" layoutY="270" text="Recommended Policies:" />
        <ComboBox fx:id="recommendationBox" layoutX="200" layoutY="265" prefWidth="350"/>
    </children>
</AnchorPane>
