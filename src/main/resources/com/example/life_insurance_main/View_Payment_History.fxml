<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ViewPaymentHistoryController">
    <children>
        <Label layoutX="200" layoutY="20" text="Customer Payment History" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="50" layoutY="70" text="Customer ID:" />
        <TextField fx:id="customerIdField" layoutX="180" layoutY="65" prefWidth="250"/>
        <Button text="Search" layoutX="440" layoutY="65" onAction="#handleSearchPayments"/>

        <TableView fx:id="paymentTable" layoutX="50" layoutY="120" prefWidth="600" prefHeight="200">
            <columns>
                <TableColumn text="Date" />
                <TableColumn text="Amount" />
                <TableColumn text="Method" />
            </columns>
        </TableView>

        <Button text="Download" layoutX="300" layoutY="340" onAction="#handleDownload"/>
    </children>
</AnchorPane>
