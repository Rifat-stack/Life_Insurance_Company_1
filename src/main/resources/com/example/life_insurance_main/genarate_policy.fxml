<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.GeneratePolicyReportController">

    <children>
        <Label layoutX="180" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Generate Policy Report" />

        <Label layoutX="50" layoutY="70" text="Report Type:" />
        <ComboBox fx:id="reportTypeBox" layoutX="200" layoutY="65" prefWidth="250" />

        <Button layoutX="200" layoutY="120" onAction="#handleGenerate" text="Generate" />
        <Button layoutX="300" layoutY="120" onAction="#handleDownload" text="Download" />

        <Label fx:id="summaryLabel" layoutX="200" layoutY="180" textFill="green" />
        <Button layoutX="24.0" layoutY="253.0" mnemonicParsing="false" onAction="#Backbutton" text="Back" />
        <Button layoutX="84.0" layoutY="253.0" mnemonicParsing="false" onAction="#MainButton" text="Main minu" />
    </children>
</AnchorPane>
