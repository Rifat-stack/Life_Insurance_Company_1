<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance_main.PolicyManager.ApproveRejectController">

    <children>
        <Label layoutX="180" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Approve or Reject Application" />

        <Label layoutX="22.0" layoutY="72.0" text="Application ID:" />
        <TextField fx:id="applicationIdField" layoutX="113.0" layoutY="68.0" prefWidth="250" />

        <Button layoutX="200.0" layoutY="103.0" onAction="#Searchbutton" text="Search" />

        <TableView fx:id="ARInfoTable" layoutX="61.0" layoutY="147.0" prefHeight="172.0" prefWidth="458.0">
            <columns>
                <TableColumn fx:id="id" prefWidth="80" text="ID" />
                <TableColumn fx:id="ARNameTable" prefWidth="120" text="Policy holder" />
                <TableColumn fx:id="ARPolicyNameTable" prefWidth="100" text="Policy Name" />
                <TableColumn fx:id="ARCoverageTable" prefWidth="80" text="Coverage" />
                <TableColumn fx:id="ARPrimiumTable" prefWidth="80" text="Premium" />
                <TableColumn fx:id="statusColumn" prefWidth="80" text="Status" />
            </columns>
        </TableView>

        <Button layoutX="238.0" layoutY="324.0" onAction="#handleApprove" text="Approve" />
        <Button layoutX="314.0" layoutY="323.0" onAction="#handleReject" text="Reject" />

        <Label fx:id="statusLabel" layoutX="200" layoutY="180" textFill="blue" />
        <Button layoutX="14.0" layoutY="360.0" onAction="#backButton" text="Back" />
    </children>
</AnchorPane>
